        <servlet-name>GerenciarCliente</servlet-name>
        <servlet-class>controller.GerenciarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarPedido</servlet-name>
        <servlet-class>controller.GerenciarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarProduto</servlet-name>
        <servlet-class>controller.GerenciarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailSendingServlet</servlet-name>
        <servlet-class>controller.EmailSendingServlet</servlet-class>
