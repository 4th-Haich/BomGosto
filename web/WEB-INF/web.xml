    <servlet-mapping>
        <servlet-name>GerenciarProduto</servlet-name>
        <url-pattern>/gerenciar_produto.do</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>porta</param-name>
        <param-value>587</param-value>
    </context-param>
    <context-param>
        <param-name>emailUsuario</param-name>
        <param-value>turmaquatrod@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>senhaUsuario</param-name>
        <param-value>turmaquatroDV</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>EmailSendingServlet</servlet-name>
        <url-pattern>/email_sending_servlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
</web-app>
